{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",         // Changed from CommonJS
    "moduleResolution": "node",     
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,  // Added for better compatibility
    "strict": true,
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}